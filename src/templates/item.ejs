<div class="card">
  <div class="card-content">
    <% if (isEditing) { %>
      <form class="edit-form">
        <div class="input-field">
          <input type="text" name="title" value="<%= title %>" class="validate">
        </div>
        <div class="input-field">
          <textarea name="content" class="materialize-textarea"><%= content %></textarea>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
        <button class="btn waves-effect waves-light red darken-1" type="reset" name="cancel">Cancel</button>
      </form>
    <% } else { %>
      <span class="card-title"><%= title %></span>
      <p><%= content %></p>
      <button class="btn waves-effect waves-light edit" style="margin-top: 30px;">Edit</button>
    <% } %>
  </div>
  <div class="card-action">
    <a href="#" class="waves-effect waves-light red-text text-darken-1 delete">Delete</a>
  </div>
</div>
